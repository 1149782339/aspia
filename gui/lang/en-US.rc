#include "resource.h"

LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_US

// UTF-8
#pragma code_page(65001)

IDD_MAINDIALOG DIALOGEX 100, 100, 375, 160
STYLE DS_SHELLFONT | WS_BORDER | WS_OVERLAPPED | WS_SYSMENU | DS_CENTER | WS_MINIMIZEBOX | WS_CAPTION
CAPTION "Aspia Remote Desktop"
FONT 8, "MS Shell Dlg"
BEGIN
    GROUPBOX "Server", -1, 5, 5, 180, 150
    LTEXT "List your IP-addresses:", -1, 12, 17, 100, 9
    CONTROL "", IDC_IP_LIST, "SysListView32", WS_BORDER | WS_VSCROLL | WS_TABSTOP | LVS_SINGLESEL | LVS_NOSORTHEADER | LVS_NOCOLUMNHEADER | LVS_SHOWSELALWAYS | LVS_REPORT, 12, 28, 166, 75
    LTEXT "", IDC_CLIENT_COUNT, 12, 110, 100, 9
    LTEXT "Server stopped.", IDC_SERVER_STATUS, 12, 125, 100, 9
    PUSHBUTTON "&Start", IDC_START_SERVER, 118, 135, 60, 14

    GROUPBOX "Client", -1, 190, 5, 180, 150
    LTEXT "Server Address:", -1, 197, 17, 100, 9
    EDITTEXT IDC_SERVER_ADDRESS_EDIT, 197, 28, 166, 12, WS_CHILD | WS_VISIBLE | WS_GROUP | ES_AUTOHSCROLL

    LTEXT "Server Port:", -1, 197, 47, 100, 9
    EDITTEXT IDC_SERVER_PORT_EDIT, 197, 58, 60, 12, WS_CHILD | WS_VISIBLE | WS_GROUP | ES_AUTOHSCROLL | ES_NUMBER
    AUTOCHECKBOX "Use default", IDC_SERVER_DEFAULT_PORT, 265, 60, 60, 8
    PUSHBUTTON "&Connect", IDC_CONNECT, 303, 135, 60, 14
END

IDD_AUTHDIALOG DIALOGEX 100, 100, 375, 160
STYLE DS_SHELLFONT | WS_BORDER | WS_DLGFRAME | WS_SYSMENU | DS_MODALFRAME | DS_CENTER
CAPTION "Aspia Remote Desktop"
FONT 8, "MS Shell Dlg"
BEGIN

END

STRINGTABLE DISCARDABLE
BEGIN
    IDS_SERVER_STARTED "Server started."
    IDS_SERVER_STOPPED "Server stopped."
    IDS_START "&Start"
    IDS_STOP "&Stop"
    IDS_NO_CLIENTS "No connected clients."
    IDS_CLIENT_COUNT "Connected clients: %d"
END
